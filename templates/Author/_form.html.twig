<div class="d-flex justify-content-center align-items-center">
    {{ form_start(form, {attr: {class: 'form'}}) }}

    <div class="col-md-6 mb-3">
        {{ form_row(form.firstname, {attr: {class: 'form-control-lg'}}) }}
    </div>

    <div class="col-md-6 mb-3">
        {{ form_row(form.lastname, {attr: {class: 'form-control-lg'}}) }}
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary btn-lg">{{ buttonLabel|default('Save') }}</button>
    </div>

    {{ form_end(form) }}
</div>