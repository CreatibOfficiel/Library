{% extends 'base.html.twig' %}

{% block title %}
    {{ author.getFullName }} - {{ parent() }}
{% endblock %}

{% block body %}
    <section>
        <div class="container mt-5">
            <h1>Affichage complet</h1>

            <dl class="row mt-4">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">{{ author.id }}</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">{{ author.firstname }}</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">{{ author.lastname }}</dd>

                <dt class="col-sm-3">Books</dt>
                <dd class="col-sm-9">
                    {% for book in author.books %}
                        {{ book.title }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </dd>
            </dl>

            <a href="{{ path('app_author_index') }}" class="btn btn-secondary mt-4">Retour Ã  la liste</a>
        </div>
    </section>
{% endblock %}