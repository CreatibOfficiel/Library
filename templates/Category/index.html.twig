{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Category
{% endblock %}

{% block body %}
    <section
        class="container mt-4"
    >
        <h1 class="text-center">Administration des catégories</h1>
        <a href="{{ path('app_category_create') }}" class="btn btn-primary">Créer une catégorie</a>

        {% if categories is empty %}
        <div class="alert alert-info mt-4">
            Aucune catégorie n'a été créée.
        </div>
        {% else %}
            <table class="table table-striped mt-4">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.title }}</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" href="{{ path('app_category_show', {id: category.id}) }}">Voir</a>
                                <a href="{{ path('app_category_edit', {id: category.id}) }}" class="btn btn-warning">Modifier</a>
                                {% include 'Category/_deleteForm.html.twig' %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </section>
{% endblock %}
