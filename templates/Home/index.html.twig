{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}

{% block body %}
    <section class="bg-primary text-white text-center py-5">
        <h1>Ma Bibliothèque</h1>
        <p class="lead">Bienvenue sur ma bibliothèque en ligne</p>
    </section>

    <section class="container mt-4">
        {% if app.user %}
            <div class="alert alert-info">
                <p>Vous êtes connecté en tant que {{ app.user.email }}</p>
                <a href="{{ path('app_logout') }}" class="alert-link">Déconnexion</a>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-primary">Connexion</a>
        {% endif %}
    </section>
{% endblock %}
